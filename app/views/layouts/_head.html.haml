%head
  %title= [content_for(:page_title), SITE_NAME, ENV['organization_name']].compact.join(' - ').html_safe
  = csrf_meta_tags

  %meta(name="format-detection" content="telephone=no")
  %meta(name="description" content="Learn awesome tips from developers at magmalabs")

  %meta(itemprop="name" content="Today I Learned")
  %meta(itemprop="brand" content="Today I Learned")
  %meta(itemprop="description" content="")

  %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5, minimum-scale=1")

  %link(href='https://fonts.googleapis.com/css?family=Raleway:700,900&display=swap' rel='preload' as="style" onload="this.rel='stylesheet'")
  %link(href='https://fonts.googleapis.com/css?family=Lora:400,700italic,700,400italic&display=swap' rel='preload' as="style" onload="this.rel='stylesheet'")
  %link(href='https://fonts.googleapis.com/css2?family=Lato&display=swap' rel='stylesheet')

  = stylesheet_link_tag 'application', media: 'all'
  = javascript_include_tag 'application', defer: 'defer'
  -# = favicon_link_tag 'favicon.png'

  = yield :canonical
  = yield :head
